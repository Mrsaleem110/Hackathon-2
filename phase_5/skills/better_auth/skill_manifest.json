{
  "name": "better_auth",
  "version": "1.0.0",
  "description": "Skills for authentication and authorization using Better Auth",
  "skills": [
    {
      "name": "create_user",
      "description": "Create a new user with email and password authentication",
      "module": "skills.better_auth.better_auth_skills",
      "function": "create_user"
    },
    {
      "name": "authenticate_user",
      "description": "Authenticate a user with email and password",
      "module": "skills.better_auth.better_auth_skills",
      "function": "authenticate_user"
    },
    {
      "name": "create_session",
      "description": "Create a new session for a user",
      "module": "skills.better_auth.better_auth_skills",
      "function": "create_session"
    },
    {
      "name": "verify_session",
      "description": "Verify if a session is valid",
      "module": "skills.better_auth.better_auth_skills",
      "function": "verify_session"
    },
    {
      "name": "create_organization",
      "description": "Create a new organization",
      "module": "skills.better_auth.better_auth_skills",
      "function": "create_organization"
    },
    {
      "name": "add_user_to_organization",
      "description": "Add a user to an organization",
      "module": "skills.better_auth.better_auth_skills",
      "function": "add_user_to_organization"
    },
    {
      "name": "enable_two_factor",
      "description": "Enable two-factor authentication for a user",
      "module": "skills.better_auth.better_auth_skills",
      "function": "enable_two_factor"
    },
    {
      "name": "rate_limit_check",
      "description": "Check if a rate limit has been exceeded",
      "module": "skills.better_auth.better_auth_skills",
      "function": "rate_limit_check"
    },
    {
      "name": "get_user_by_id",
      "description": "Get user information by ID",
      "module": "skills.better_auth.better_auth_skills",
      "function": "get_user_by_id"
    },
    {
      "name": "update_user",
      "description": "Update user information",
      "module": "skills.better_auth.better_auth_skills",
      "function": "update_user"
    }
  ],
  "dependencies": [
    "better-auth"
  ],
  "examples": [
    {
      "name": "Create User",
      "description": "Creates a new user account with email and password",
      "usage": {
        "skill": "create_user",
        "params": {
          "email": "user@example.com",
          "password": "securePassword123",
          "name": "John Doe",
          "metadata": {
            "department": "engineering"
          }
        }
      }
    },
    {
      "name": "Authenticate User",
      "description": "Authenticates a user with email and password",
      "usage": {
        "skill": "authenticate_user",
        "params": {
          "email": "user@example.com",
          "password": "securePassword123"
        }
      }
    },
    {
      "name": "Create Organization",
      "description": "Creates a new organization with an owner",
      "usage": {
        "skill": "create_organization",
        "params": {
          "name": "Acme Corp",
          "owner_user_id": "user-123",
          "metadata": {
            "industry": "technology"
          }
        }
      }
    },
    {
      "name": "Enable Two-Factor Authentication",
      "description": "Enables 2FA for a user account",
      "usage": {
        "skill": "enable_two_factor",
        "params": {
          "user_id": "user-123",
          "method": "totp"
        }
      }
    }
  ]
}